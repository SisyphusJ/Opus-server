<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.opus.auth.mapper.AuthMapper">

    <select id="findByUserId" resultMap="myAuth">
        select m_id, pw from member where id=#{userName}
    </select>

    <resultMap id="myAuth" type="com.opus.auth.domain.AuthVO">
        <id property="memberId" column="m_id"/>
        <result property="userName" column="id"/>
        <result property="password" column="pw"/>
        <result property="nickname" column="nick"/>
        <result property="email" column="email"/>
    </resultMap>

</mapper>