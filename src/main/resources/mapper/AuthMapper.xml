<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.opus.auth.mapper.AuthMapper">

    <select id="selectAuthByUsername" resultMap="myAuth">
        select member_id, password from member where username = #{username}
    </select>

    <resultMap id="myAuth" type="com.opus.auth.domain.AuthVO">
        <id property="memberId" column="member_id"/>
        <result property="password" column="password"/>
    </resultMap>

</mapper>